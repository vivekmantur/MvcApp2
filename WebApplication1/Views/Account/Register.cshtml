@model WebApplication1.ViewModel.UserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Register</h1>
    @Html.ValidationSummary()

    <form asp-action="Register" asp-controller="Account" method="post">

        <div class="registerdiv">
            <!-- UserName -->
            <div class="form-group col-sm-12">
                <label asp-for="@Model.UserName" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <!-- Email -->
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <!-- PhoneNumber -->
            <div class="form-group col-sm-12">
                <label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Mobile Number", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                </div>
            </div>

            <!-- Address -->
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Address" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Address, new { placeholder = "Address", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
            </div>

            <!-- Password -->
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <!-- Confirm Password -->
            <div class="form-group col-sm-12">
                <label asp-for="@Model.ConfirmPassword" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">Sign Up</button>
                </div>
            </div>
        </div>
    </form>
</div>
