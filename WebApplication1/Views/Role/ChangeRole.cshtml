@model WebApplication1.ViewModel.ChangeRoleViewModel

@{
    ViewData["Title"] = "Change Role";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="ChangeRole" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="UserName">User Name</label>
            <input type="text" class="form-control" value="@Model.UserName" disabled />
        </div>

        <div class="form-group">
            <label for="CurrentRole">Current Role</label>
            <input type="text" class="form-control" value="@Model.CurrentRole" disabled />
        </div>

        <div class="form-group">
            <label for="NewRole">Select New Role</label>
            <select asp-for="NewRole" class="form-control">
                @foreach (var role in Model.AvailableRoles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>

        <input type="hidden" asp-for="UserId" />

        <button type="submit" class="btn btn-primary">Change Role</button>
    </form>
</div>

