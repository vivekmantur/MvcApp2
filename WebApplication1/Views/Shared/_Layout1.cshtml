<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimeCarDeals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com">
    </script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <header class="bg-white shadow-md">
        <div class="container mx-auto flex justify-between items-center py-4 px-6">
            <div class="flex items-center">
                <img alt="PrimeCarDeals Logo" class="h-10 w-10" height="50" src="https://storage.googleapis.com/a1aa/image/9tJvoMS5V1Y1AVqcUYmOaXwzixIu0fFgQxwlBBAVrGZfzcxTA.jpg" width="50" />
                <span class="ml-2 text-xl font-bold">
                    PrimeCarDeals
                </span>
            </div>
            <nav class="space-x-6">
                <partial name="_LoginPartial" />
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-300 py-4 mt-10">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex space-x-4">
                <a class="text-gray-800" href="#">
                    <i class="fab fa-facebook-f">
                    </i>
                </a>
                <a class="text-gray-800" href="#">
                    <i class="fab fa-instagram">
                    </i>
                </a>
            </div>
            <div class="text-gray-800">
                PrimeCarDeals
                <br />
                Copyright © 2024 PrimeCarDeals, Inc.
            </div>
            <div class="text-gray-800 space-x-4">
                <a class="hover:underline" href="#">
                    Terms and Conditions
                </a>
                <a class="hover:underline" href="#">
                    Privacy Policies
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
