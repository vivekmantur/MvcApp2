<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimeCarDeals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        /* Ensure the body and html fill the full viewport height */
        html, body {
            height: 100%;
        }

        /* Ensure footer stays at the bottom of the page */
        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content-wrapper {
            flex-grow: 1;
        }

        /* Header background color (white) and border at the bottom */
        header {
            background-color: #ffffff; /* White background */
            border-bottom: 2px solid #e0e0e0; /* Light gray border */
        }

        /* Footer background color (light gray) */
        footer {
            background-color: #d3d3d3; /* Light gray background */
        }

        /* Text color for footer */
        .footer-text {
            color: #333333; /* Dark text for readability */
        }

        /* Social icon colors */
        .social-icon {
            color: #333333;
        }

            .social-icon:hover {
                color: #6c757d; /* Lighter hover color */
            }

        /* Add space between social icons in footer */
        .social-icon {
            margin-right: 15px; /* Add some space between icons */
        }
    </style>
</head>
<body class="bg-light">
    <div class="page-container">
        <!-- Header -->
        <header class="shadow-md">
            <div class="container py-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center ml-0">
                        <!-- Ensure logo is at left edge -->
                        <img alt="PrimeCarDeals Logo" height="50" src="https://storage.googleapis.com/a1aa/image/9tJvoMS5V1Y1AVqcUYmOaXwzixIu0fFgQxwlBBAVrGZfzcxTA.jpg" width="50" />
                        <span class="ml-2 h5 font-weight-bold text-dark">
                            PrimeCarDeals
                        </span>
                    </div>
                    <nav>
                        <partial name="_LoginPartial" />
                    </nav>
                </div>
            </div>
        </header>

        <!-- Main content area -->
        <div class="content-wrapper container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="py-4 mt-auto">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center ml-0">
                    <!-- Ensure logo is at left edge -->
                    <img alt="PrimeCarDeals Logo" height="50" src="https://storage.googleapis.com/a1aa/image/9tJvoMS5V1Y1AVqcUYmOaXwzixIu0fFgQxwlBBAVrGZfzcxTA.jpg" width="50" />
                    <span class="ml-2 h5 font-weight-bold text-dark">
                        PrimeCarDeals
                    </span>
                </div>
                <div class="d-flex">
                    <a class="social-icon" href="#">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="social-icon" href="#">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
                <div class="footer-text">
                    PrimeCarDeals
                    <br />
                    Copyright © 2024 PrimeCarDeals, Inc.
                </div>
                <div class="footer-text">
                    <a class="text-decoration-none" href="#">Terms and Conditions</a>
                    <span class="mx-2">|</span>
                    <a class="text-decoration-none" href="#">Privacy Policies</a>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
