@model WebApplication1.Models.CarDetails

<!DOCTYPE html>
<html>
<head>
    <title>Car Details</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex flex-column justify-content-center align-items-center min-vh-100">
    <div class="container">
        <h1 class="display-4 fw-bold text-center mb-4">Car Details</h1>

        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.CarName" class="mb-4 mx-auto img-fluid" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.FrontImage)" />
            </div>
            <div class="col-md-6">
                <h3>@Model.CarName @Model.Variant</h3>
                <p><strong>Year:</strong> @Model.Year</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C", new System.Globalization.CultureInfo("en-IN"))</p>
                <p><strong>Kilometers:</strong> @Model.Kilometers km</p>
                <p><strong>Transmission:</strong> @Model.Transmission</p>
                <p><strong>Fuel Type:</strong> @Model.FuelType</p>
                <p><strong>Vehicle Type:</strong> @Model.VehicleType</p>
                <p><strong>City:</strong> @Model.City</p>
                <p><strong>Owner Name:</strong> @Model.OwnerName</p>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a href="@Url.Action("Dashboard", "User")" class="btn btn-secondary">Back to List</a>
            @if (Model.Status == "unsold")
            {
                <a href="@Url.Action("RequestTestDrive", "User", new { carId = Model.CarId })" class="btn btn-success">Request Test Drive</a>
            }

            <!-- Add a Book Button -->
            <a href="@Url.Action("Book", "User", new { id = Model.CarId })" class="btn btn-primary">Book</a>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
